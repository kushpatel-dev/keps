{% assign font = section.settings.title_font %}
<style>
  {{ font | font_face: font_display: 'swap' }}
</style>
<section>
  <div class="ctm-text-for-line">
    {{ section.settings.section_title }}
  </div>
</section>

{% schema %}
  {
    "name": "Custom Line Section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Our Cafes"
      }
    ],
    "presets": [
      {
        "name": "Custom Line Section",
        "category": "Custom Sections"
      }
    ]
  }
{% endschema %}