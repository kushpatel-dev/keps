<style>
  .basic-render {
    margin-top: 2rem;
    display: flex;
    gap: 2rem;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    /* Light background for contrast */
    padding: 1rem;
    border-radius: 8px;
    /* Rounded corners for container */
  }
  .basic-render iframe {
    width: 100%;
    max-width: 720px;
    aspect-ratio: 16 / 9;
    border: 0;
    border-radius: 8px;
    /* Rounded corners for iframe */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    /* Subtle shadow for depth */
  }
  .basic-render .button {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 500;
    color: #fff;
    background-color: #007bff;
    /* Primary blue color */
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease
    , transform 0.2s ease;
    /* Smooth transitions */
  }
  .basic-render .button:hover {
    background-color: #0056b3;
    /* Darker blue on hover */
    transform: scale(1.05);
    /* Slight scale effect on hover */
  }
  .basic-render .button:active {
    background-color: #004085;
    /* Even darker blue on click */
    transform: scale(0.95);
    /* Slight shrink effect on click */
  }
</style>

<div class="basic-render">
  <button data-render class="button">Render</button>
  <div class="render-output"></div>
</div>


<script>
  const button = document.querySelector('[data-render]');
  button.addEventListener('click',() => {
    fetch(`${window.Shopify.routes.root}?sections=ctm-card`)
  .then((res) => res.json())
  .then((data) => {
    document.querySelector('.render-output').innerHTML = data['ctm-card'];
  });
  })
</script>
