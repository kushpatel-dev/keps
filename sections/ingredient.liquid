{% schema %}
  {
    "name": "Coffee Feature Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Main Heading",
        "default": "Coffee Highlights"
      }, {
        "type": "text",
        "id": "highlight_text",
        "label": "Highlight Text",
        "default": "200 MG CAFFEINE"
      }, {
        "type": "text",
        "id": "highlight_subtext",
        "label": "Highlight Subtext",
        "default": "Functional Coffee Blend"
      }
    ],
    "blocks": [
      {
        "type": "feature",
        "name": "Feature",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Ingredient-title",
            "default": "Ingredient Used:"
          }, {
            "type": "text",
            "id": "desc",
            "label": "Ingredient Description"
          },{
            "type": "text",
            "id": "title2",
            "label": "Benefit-title",
            "default": "How Youâ€™ll Feel"
          }, {
            "type": "text",
            "id": "desc2",
            "label": "Benefit Description",
            "default": "Smooth and energizing, this coffee keeps you focused without the jitters."
          },
        ]
      }
    ],
    "presets": [
      {
        "name": "Coffee Feature Section",
        "category": "Product"
      }
    ]
  }
{% endschema %}

<section class="relative bg-gradient-to-t from-[#fdf3d8] to-[#e9d3a0] text-black py-12">
  <div class="max-w-7xl mx-auto px-6">
    {% if section.settings.heading != blank %}
      <h2 class="w-full text-2xl md:text-3xl font-bold mb-6">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-10 gap-8 items-start">

      <div class="md:col-span-7 space-y-8">
        {% for block in section.blocks %}
          {% if block.settings.title != blank or block.settings.desc != blank %}
            <div>
              {% if block.settings.title != blank %}
                <h3 class="text-xl md:text-2xl font-extrabold mb-2">
                  {{ block.settings.title }}
                </h3>
              {% endif %}

              {% if block.settings.desc != blank %}
                <p class="text-base md:text-xl leading-relaxed">
                  {{ block.settings.desc }}
                </p>
              {% endif %}
            </div>
          {% endif %}

          {% if block.settings.title2 != blank or block.settings.desc2 != blank %}
            <div>
              {% if block.settings.title2 != blank %}
                <h3 class="text-xl md:text-2xl font-extrabold mb-2">
                  {{ block.settings.title2 }}
                </h3>
              {% endif %}
                <p class="text-base md:text-lg leading-relaxed">  
                    {{product.metafields.custom.benefit_description}}
                </p>
            </div>
          {% endif %}
        {% endfor %}
      </div>

    </div>
  </div>
</section>